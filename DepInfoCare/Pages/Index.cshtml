@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="home">
    <div class="home__welcome">
        <h1 class="home__welcome__title">
            Welcome to Info Care
        </h1>
        <p class="home__welcome__description">
            Providing seamless electronic health record management for healthcare facilities.
        </p>
        <a class="home__welcome__button" href="/login">
            Get Started
        </a>
    </div>
    <div class="home__cover-image">
        <img src="/images/home-cover.jpg" alt="DEP Info Care" />
    </div>
    <div class="home__services">
        <h1 class="home__services__title">
            Our Services
        </h1>
        <div class="home__services__list">
            <div class="home__services__item">
                <h3 class="home__services__item__title">
                    Facility Management
                </h3>
                <p class="home__services__item__description">
                    Efficiently manage healthcare facilities and staff
                </p>
            </div>
            <div class="home__services__item">
                <h3 class="home__services__item__title">
                    Patient Management
                </h3>
                <p class="home__services__item__description">
                    Streamline patient records and improve care coordination
                </p>
            </div>
            <div class="home__services__item">
                <h3 class="home__services__item__title">
                    EHR System
                </h3>
                <p class="home__services__item__description">
                    Access and update electronic health records with ease
                </p>
            </div>
        </div>
    </div>
</div>