@page
@model DepInfoCare.Pages.Patient.AddModel
@{
    ViewData["Title"] = Model.Breadcrumb.Title;
}

<div class="wrapper">
    <div class="container">
        <div class="container__title">
            @ViewData["Title"]
        </div>
        @if (ViewData["Failed"] != null)
        {
            <div class="container__message">
                Patient already exists
            </div>
        }
        <form class="patient__form" method="post" enctype="multipart/form-data">
            <div class="patient__form__group">
                <input class="patient__form__input" asp-for="FormData.FirstName" type="text" placeholder="First name" required />
                <span asp-validation-for="FormData.FirstName"></span>
            </div>
            <div class="patient__form__group">
                <input class="patient__form__input" asp-for="FormData.MiddleName" type="text" placeholder="Middle name" />
                <span asp-validation-for="FormData.MiddleName"></span>
            </div>
            <div class="patient__form__group">
                <input class="patient__form__input" asp-for="FormData.LastName" type="text" placeholder="Last name" required />
                <span asp-validation-for="FormData.LastName"></span>
            </div>
            <div class="patient__form__group">
                <input class="patient__form__input" asp-for="FormData.Suffix" type="text" placeholder="Suffix (Jr., Sr., III)" />
                <span asp-validation-for="FormData.Suffix"></span>
            </div>
            <div class="patient__form__group">
                <input class="patient__form__input" asp-for="FormData.Room" type="text" placeholder="Room" />
                <span asp-validation-for="FormData.Room"></span>
            </div>
            <div class="patient__form__group">
                <input class="patient__form__input" asp-for="FormData.ImageFile" type="file" accept="image/*" placeholder="Patient photo" />
                <span asp-validation-for="FormData.ImageFile"></span>
            </div>
            <button class="patient__form__button" type="submit">
                Submit
            </button>
        </form>
    </div>
</div>