@page
@model DepInfoCare.Pages.Patient.DetailModel
@{
    ViewData["Title"] = Model.Breadcrumb.Title;
}

<div class="wrapper">
    <div class="container">
        <div class="container__title">
            Patient EHR
        </div>
        <div class="patient">
            <div class="patient__info">
                <div class="patient__info__fields">
                    <div class="patient__info__field">
                        <span>
                            Name:
                        </span>
                        @Model.Patient.FullName
                    </div>
                    <div class="patient__info__field">
                        <span>
                            Room:
                        </span>
                        @Model.Patient.Room
                    </div>
                    <div class="patient__info__field">
                        <span>
                            Medical History:
                        </span>
                    </div>
                </div>
                <div class="patient__info__image">
                    <img src="@(Model.Patient.ImageUrl)" />
                </div>
            </div>
            <div class="patient__actions">
                <a class="patient__actions__button" href="#">
                    Profile
                </a>
                <a class="patient__actions__button" href="#">
                    Diagnosis
                </a>
                <a class="patient__actions__button" href="#">
                    Vital Signs
                </a>
                <a class="patient__actions__button" href="#">
                    Doctor Notes
                </a>
                <a class="patient__actions__button" href="#">
                    Nurse Notes
                </a>
                <a class="patient__actions__button" href="#">
                    Medication Sheet
                </a>
                <a class="patient__actions__button" href="#">
                    Laboratory
                </a>
                <a class="patient__actions__button" href="#">
                    Immunization
                </a>
                <a class="patient__actions__button" href="#">
                    Allergy
                </a>
            </div>
        </div>
    </div>
</div>