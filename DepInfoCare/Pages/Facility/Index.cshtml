@page
@model DepInfoCare.Pages.Facility.IndexModel
@{
    ViewData["Title"] = "Facilities";
}

<h1>
    Facilities
</h1>

<ul>
    @foreach (var item in Model.Facilities)
    {
        <li>
            <a href="/facility/@(item.Id)">@item.Name</a> | <a href="/facility/edit/@(item.Id)">Edit</a> | <a href="/facility/delete/@(item.Id)">Delete</a>
        </li>
    }
</ul>

<a href="/facility/add">Add Facility</a>