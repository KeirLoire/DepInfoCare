@page
@model DepInfoCare.Pages.Facility.AddModel
@{
    ViewData["Title"] = "Add Facility";
}

@if (ViewBag.Message != null)
{
    <div>
        @ViewBag.Message
    </div>
}

<h1>
    Add Facility
</h1>

<form method="post">
    <div>
        <label>Name: </label>
        <input type="text" name="name" required />
    </div>
    <div>
        <label>Address: </label>
        <input type="text" name="address" />
    </div>
    <button type="submit">Submit</button>
</form>