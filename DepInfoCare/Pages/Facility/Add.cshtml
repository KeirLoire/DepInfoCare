@page
@model DepInfoCare.Pages.Facility.AddModel
@{
    ViewData["Title"] = Model.Facility != null 
        ? "Edit Facility" 
        : "Add Facility";
}

@if (ViewBag.Message != null)
{
    <div>
        @ViewBag.Message
    </div>
}

@if (Model.Facility != null)
{
    <h1>
        Edit Facility - @Model.Facility.Name
    </h1>
}
else
{
    <h1>
        Add Facility
    </h1>
}

<form method="post">
    <div>
        <label>Name: </label>
        <input type="text" name="name" value="@(Model.Facility != null ? Model.Facility.Name : null)" required />
    </div>
    <div>
        <label>Address: </label>
        <input type="text" name="address" value="@(Model.Facility != null ? Model.Facility.Address : null)" />
    </div>
    <button type="submit">Submit</button>
</form>