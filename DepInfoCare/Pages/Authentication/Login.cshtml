@page
@model DepInfoCare.Pages.Authentication.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="wrapper">
    <div class="container">
        <div class="container__title">
            Login
        </div>
        @if (ViewData["Failed"] != null)
        {
            <div class="container__message">
                Invalid login credentials
            </div>
        }
        <form class="login__form" method="post">
            <div class="login__form__group">
                <input class="login__input" type="text" name="username" placeholder="Username" required />
            </div>
            <div class="login__form__group">
                <input class="login__input"  type="password" name="password" placeholder="Password" required />
            </div>
            <button class="login__button" type="submit">
                Login
            </button>
        </form>
    </div>
</div>